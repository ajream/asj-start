<% provide(:title, "爱上家标准报价分类") %>

<div class="am-pagebody">
  <div class="card pd-20">
    <h6 class="card-body-title">爱上家标准报价</h6>
    <p style="margin-bottom: 0;">爱 上 家 装 饰  报 价 清 单 分 类</p>
    <a href="<%= new_quotation_category_path %>" class="btn btn-primary pd-lg-x-20 mg-l-auto">添加</a>
    <br>
    <div class="table-responsive">
      <table class="table table-hover table-bordered mg-b-0">
        <thead class="bg-info">
          <tr>
            <th>序号</th>
            <th>名称</th>
            <th>权重</th>
            <th>操作</th>
          </tr>
        </thead>
        <% @quotation_categories.each_with_index do |quotation_category, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= quotation_category.title %></td>
            <td><%= quotation_category.weight %></td>
            <td>
              <% if quotation_category.root? %>
                <%= link_to "查看子分类", quotation_categories_path(id: quotation_category), class: "btn btn-info btn-sm" %>
              <% end -%>
              <%= link_to '编辑', edit_quotation_category_path(quotation_category), class: "btn btn-warning btn-sm" %>
              <%= link_to '删除', quotation_category, method: :delete, data: { confirm: '确认删除吗？' }, class: "btn btn-danger btn-sm"%>
            </td>
          </tr>
        <% end %>
      </table>
      <br>
      <%= paginate @quotation_categories %>
    </div>
  </div>
</div>