  <div class="am-pagebody">
    <div class="card pd-20 pd-sm-40">
      <h6 class="card-body-title"><span class="tx-danger"><%= @department.name %></span>的详情</h6>
      <p class="mg-b-20 mg-sm-b-30">资料详情展示</p>
      <div class="row mg-b-20">
        <div class="col-md-3">
          <div class="card rounded-0">
            <div class="card-header card-header-default">
              部门名称
            </div>
            <div class="card-body bg-gray-200">
              <p class="mg-b-0"><%= @department.name %></p>
            </div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="card rounded-0">
            <div class="card-header card-header-default">
              部门描述
            </div>
            <div class="card-body bg-gray-200">
              <p class="mg-b-0"><%= @department.description %></p>
            </div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="card rounded-0">
            <div class="card-header card-header-default">
              顺序
            </div>
            <div class="card-body bg-gray-200">
              <p class="mg-b-0"><%= @department.position %></p>
            </div>
          </div>
        </div>

        <div class="col-md-3">
          <div class="card rounded-0">
            <div class="card-header card-header-default">
              是否有效
            </div>
            <div class="card-body bg-gray-200">
              <p class="mg-b-0"><%= raw(@department.active? ? '<span class="tx-success">有效</span>' : '<span class="tx-danger">无效</span>') %></p>
            </div>
          </div>
        </div>
      </div>
      <div class="form-layout-footer">
        <%= link_to '编辑', edit_department_path(@department), class: "btn btn-info mg-r-5" %>
        <%= link_to '返回', departments_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
